{
  "openapi": "3.0.3",
  "info": {
    "title": "API для взаимодействия с прошивками",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8003/api",
      "description": "Локальный сервер для разработки"
    },
    {
      "url": "http://192.168.0.15:8003/api",
      "description": "IP ноутбука MAG"
    }
  ],
  "paths": {
    "/v1/test": {
      "get": {
        "summary": "Проверить работу сервера",
        "tags": [
          "Public"
        ],
        "responses": {
          "200": {
            "description": "Тестовое сообщение",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Test handler"
                }
              }
            }
          }
        }
      }
    },
    "/v1/registration": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Создать аккаунт",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "tag",
                  "name",
                  "password"
                ],
                "properties": {
                  "tag": {
                    "type": "string",
                    "example": "example_user_tag"
                  },
                  "name": {
                    "type": "string",
                    "example": "alex"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Аккаунт успешно создан",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "id",
                    "tag",
                    "name"
                  ],
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "tag": {
                      "type": "string",
                      "example": "example_user_tag"
                    },
                    "name": {
                      "type": "string",
                      "example": "alex"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Получить JWT-токен",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "tag",
                  "password"
                ],
                "properties": {
                  "tag": {
                    "type": "string",
                    "example": "example_user_tag"
                  },
                  "password": {
                    "type": "string",
                    "example": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешная аутентификация",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "user",
                    "token"
                  ],
                  "properties": {
                    "user": {
                      "type": "object",
                      "required": [
                        "id",
                        "tag",
                        "name"
                      ],
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "tag": {
                          "type": "string",
                          "example": "example_user_tag"
                        },
                        "name": {
                          "type": "string",
                          "example": "alex"
                        }
                      }
                    },
                    "token": {
                      "type": "object",
                      "required": [
                        "refresh",
                        "expiresIn",
                        "type"
                      ],
                      "properties": {
                        "refresh": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                        },
                        "expiresIn": {
                          "type": "integer",
                          "example": 3600
                        },
                        "type": {
                          "type": "string",
                          "example": "Bearer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/chats": {
      "get": {
        "summary": "Получить список чатов",
        "description": "Возвращает список чатов пользователя с участниками и последними сообщениями. ID пользователя извлекается из JWT токена.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Private"
        ],
        "parameters": [
          {
            "name": "limit_messages",
            "in": "query",
            "required": false,
            "description": "Количество последних сообщений в каждом чате (по умолчанию 5)",
            "schema": {
              "type": "integer",
              "default": 5,
              "example": 5
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный запрос",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "chats"
                  ],
                  "properties": {
                    "chats": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "id",
                          "name",
                          "users",
                          "messages"
                        ],
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "ID чата",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "description": "Имя чата",
                            "example": "Личный чат"
                          },
                          "users": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "required": [
                                "id",
                                "tag",
                                "name"
                              ],
                              "properties": {
                                "id": {
                                  "type": "integer",
                                  "description": "ID пользователя",
                                  "example": 1
                                },
                                "tag": {
                                  "type": "string",
                                  "description": "Тег пользователя",
                                  "example": "example_user_tag"
                                },
                                "name": {
                                  "type": "string",
                                  "description": "Имя пользователя",
                                  "example": "alex"
                                }
                              }
                            }
                          },
                          "messages": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "required": [
                                "user_author",
                                "message"
                              ],
                              "properties": {
                                "user_author": {
                                  "type": "object",
                                  "required": [
                                    "id",
                                    "tag",
                                    "name"
                                  ],
                                  "properties": {
                                    "id": {
                                      "type": "integer",
                                      "example": 1
                                    },
                                    "tag": {
                                      "type": "string",
                                      "example": "example_user_tag"
                                    },
                                    "name": {
                                      "type": "string",
                                      "example": "alex"
                                    }
                                  }
                                },
                                "message": {
                                  "type": "object",
                                  "required": [
                                    "id",
                                    "text",
                                    "time"
                                  ],
                                  "properties": {
                                    "id": {
                                      "type": "integer",
                                      "description": "ID сообщения",
                                      "example": 1
                                    },
                                    "text": {
                                      "type": "string",
                                      "description": "Текст сообщения",
                                      "example": "Привет! Как дела?"
                                    },
                                    "time": {
                                      "type": "string",
                                      "format": "date-time",
                                      "description": "Время отправки сообщения",
                                      "example": "2025-02-01T15:26:00Z"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некорректные параметры запроса"
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      }
    },
    "/v1/chats/{id}/messages": {
      "get": {
        "summary": "Получить сообщения чата",
        "description": "Возвращает список сообщений в указанном чате с пагинацией. ID пользователя извлекается из JWT токена.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Private"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID чата",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "description": "Количество сообщений для выборки",
            "schema": {
              "type": "integer",
              "example": 20
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "description": "Смещение для пагинации (по умолчанию 0)",
            "schema": {
              "type": "integer",
              "default": 0,
              "example": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный запрос",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "messages"
                  ],
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "user_author",
                          "message"
                        ],
                        "properties": {
                          "user_author": {
                            "type": "object",
                            "required": [
                              "id",
                              "tag",
                              "name"
                            ],
                            "properties": {
                              "id": {
                                "type": "integer",
                                "description": "ID пользователя-автора",
                                "example": 1
                              },
                              "tag": {
                                "type": "string",
                                "description": "Тег пользователя",
                                "example": "example_user_tag"
                              },
                              "name": {
                                "type": "string",
                                "description": "Имя пользователя",
                                "example": "alex"
                              }
                            }
                          },
                          "message": {
                            "type": "object",
                            "required": [
                              "id",
                              "text",
                              "time"
                            ],
                            "properties": {
                              "id": {
                                "type": "integer",
                                "description": "ID сообщения",
                                "example": 1
                              },
                              "text": {
                                "type": "string",
                                "description": "Текст сообщения",
                                "example": "Привет! Как дела?"
                              },
                              "time": {
                                "type": "string",
                                "format": "date-time",
                                "description": "Время отправки сообщения",
                                "example": "2025-02-01T15:26:00Z"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некорректные параметры запроса (chat_id, limit, offset)"
          },
          "401": {
            "description": "Не авторизован"
          }
        }
      }
    },
    "/v1/private/chats/{id}/history": {
      "get": {
        "summary": "Получить историю сообщений чата",
        "description": "Возвращает список сообщений в указанном чате",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Private"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID чата",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный запрос",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "ID сообщения",
                            "example": 1
                          },
                          "user_id": {
                            "type": "integer",
                            "description": "ID пользователя",
                            "example": 113
                          },
                          "username": {
                            "type": "string",
                            "description": "Имя пользователя",
                            "example": "alex"
                          },
                          "message": {
                            "type": "string",
                            "description": "Текст сообщения",
                            "example": "Привет! Как дела?"
                          },
                          "time": {
                            "type": "string",
                            "description": "Время отправки сообщения",
                            "example": "15:26"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/private/chats/headers": {
      "get": {
        "summary": "Получить заголовки чатов с последними сообщениями",
        "description": "Возвращает список заголовков всех чатов пользователя с предпросмотром последнего сообщения. ID пользователя извлекается из JWT токена.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Private"
        ],
        "responses": {
          "200": {
            "description": "Успешный запрос",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chats": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "chat_id": {
                            "type": "integer",
                            "description": "ID чата",
                            "example": 42
                          },
                          "chat_name": {
                            "type": "string",
                            "description": "Имя чата (имя собеседника для личных чатов / название группы для групповых)",
                            "example": "Александр"
                          },
                          "message": {
                            "type": "string",
                            "description": "Текст сообщения",
                            "example": "Привет! Как дела?"
                          },
                          "time": {
                            "type": "string",
                            "description": "Время отправки сообщения",
                            "example": "15:26"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}